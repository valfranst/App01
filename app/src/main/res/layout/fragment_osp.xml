<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teanlabsvalfran.app01.fragments.OSPFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idPlacaOS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"
                android:text="PLACA678"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="@dimen/xxgrande"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/idDataOS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:text="1234567812345678"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="@dimen/xxgrande"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/idValorOS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:text="999999999"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="@dimen/xxgrande"
                android:textStyle="bold|italic" />


            <Button
                android:id="@+id/btImprimirOS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginRight="10dp"
                android:text="Imprimir"
                android:textSize="@dimen/xxgrande"
                android:textStyle="bold|italic"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvOrcamentoServico"
            android:layout_width="match_parent"
            android:minWidth="450dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:scrollbars="vertical"
            android:visibility="visible"
            tools:listitem="@layout/list_orcamento_servico"
            android:layout_marginBottom="30dp">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

    <Button
        android:id="@+id/btEditarOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="EDITAR"
        android:textSize="@dimen/xxgrande"
        android:textStyle="bold|italic"
        android:layout_marginRight="20dp"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/btVoltarOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="VOLTAR"
        android:textSize="@dimen/xxgrande"
        android:textStyle="bold|italic"
        android:layout_marginRight="170dp"
        style="@style/Widget.AppCompat.Button.Colored"/>



</android.support.design.widget.CoordinatorLayout>
